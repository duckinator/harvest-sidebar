{
  "manifest_version": 2,
  "name": "Harvest Sidebar",
  "version": "1.0",

  "description": "Adds a sidebar for tracking time in Harvest.",

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://gitlab.com/*"],
      "js": ["sidebar.js"]
    }
  ]
}
